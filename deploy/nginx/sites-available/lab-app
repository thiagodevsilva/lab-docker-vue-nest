# Configuração do Nginx para Lab Docker Vue Nest
# Este arquivo deve ser copiado para /etc/nginx/sites-available/lab-app
# e criado um symlink em /etc/nginx/sites-enabled/

# ============================================
# APLICAÇÃO: Lab Docker Vue Nest (status-sistem.thiagosilva.dev.br)
# Frontend: status-sistem.thiagosilva.dev.br (porta 9001)
# Backend:  api.status-sistem.thiagosilva.dev.br (porta 9002)
# ============================================

# redireciona http -> https
server {
  listen 80;
  listen [::]:80;
  server_name status-sistem.thiagosilva.dev.br api.status-sistem.thiagosilva.dev.br;
  return 301 https://$host$request_uri;
}

# Frontend em https
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name status-sistem.thiagosilva.dev.br;

  ssl_certificate     /etc/letsencrypt/live/status-sistem.thiagosilva.dev.br/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/status-sistem.thiagosilva.dev.br/privkey.pem;
  ssl_protocols       TLSv1.2 TLSv1.3;
  ssl_ciphers         HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;

  # Logs
  access_log /var/log/nginx/lab-app-frontend-access.log;
  error_log /var/log/nginx/lab-app-frontend-error.log;

  # Proxy para container frontend (porta 9001)
  location / {
    proxy_pass http://localhost:9001;
    proxy_http_version 1.1;
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    
    # Timeouts
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;
    
    # Cache para assets estáticos
    proxy_cache_bypass $http_upgrade;
  }
}

# Backend (API) em https
server {
  listen 443 ssl http2;
  listen [::]:443 ssl http2;
  server_name api.status-sistem.thiagosilva.dev.br;

  ssl_certificate     /etc/letsencrypt/live/status-sistem.thiagosilva.dev.br/fullchain.pem;
  ssl_certificate_key /etc/letsencrypt/live/status-sistem.thiagosilva.dev.br/privkey.pem;
  ssl_protocols       TLSv1.2 TLSv1.3;
  ssl_ciphers         HIGH:!aNULL:!MD5;
  ssl_prefer_server_ciphers on;

  # Logs
  access_log /var/log/nginx/lab-app-backend-access.log;
  error_log /var/log/nginx/lab-app-backend-error.log;

  # Proxy para container backend (porta 9002)
  location / {
    proxy_pass http://localhost:9002;
    proxy_http_version 1.1;
    proxy_set_header Host              $host;
    proxy_set_header X-Real-IP         $remote_addr;
    proxy_set_header X-Forwarded-For   $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    client_max_body_size 10m;
    
    # Timeouts
    proxy_connect_timeout 60s;
    proxy_send_timeout 60s;
    proxy_read_timeout 60s;
  }
}
